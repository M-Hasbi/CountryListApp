
@{
    ViewData["Title"] = "Save";
}
@model CountryBorderDto
<h1>Save CountryBorder</h1>

<div class="row">

    <div  class=col-md-6>

        <form asp-action="Save" method="post" asp-controller="CountryBorders">

            <div class="form-group">
                <label asp-for="Names"></label>
                <input asp-for="Names" class="form-control" />
                <span asp-validation-for="Names" class="text-danger"></span>
            </div>

               <div class="form-group">
                <label asp-for="CountryId"></label>
                <select asp-for="CountryId" asp-items="ViewBag.countries" class="form-control" ></select>
               
            </div>

            <div class="form-group">

                <input type="submit" value="Save" class="btn-primary" />

            </div>
        </form>



    </div>


</div>

