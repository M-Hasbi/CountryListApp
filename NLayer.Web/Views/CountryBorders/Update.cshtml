
@{
    ViewData["Title"] = "Update";
}
@model CountryBorderDto
<h1>Update CountryBorder</h1>

<div class="row">

    <div  class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="CountryBorders">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Names"></label>
                <input asp-for="Names" class="form-control" />
                <span asp-validation-for="Names" class="text-danger"></span>
            </div>


           


               <div class="form-group">
                <label asp-for="CountryId"></label>
                <select asp-for="CountryId" asp-items="ViewBag.countries" class="form-control" ></select>
               
            </div>

            <div class="form-group">

                <input type="submit" value="Update" class="btn-primary" />

            </div>
        </form>



    </div>


</div>
